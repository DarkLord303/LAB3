<%- include('./partials/header.ejs') %>
<%- include('./partials/nav.ejs') %>

<div class="container mt-5" style="max-width: 520px;">
  <h2 class="text-center"><%= title %></h2>
  <form method="post" action="/add-post">
    <div class="mb-3">
      <label for="title" class="form-label">Назва</label>
      <input required type="text" class="form-control" id="title" name="title" />
    </div>
    <div class="mb-3">
      <label for="author" class="form-label">Автор</label>
      <input required type="text" class="form-control" id="author" name="author" />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Опис</label>
      <textarea required class="form-control" id="description" name="description" rows="5"></textarea>
    </div>
    <button type="submit" class="btn btn-success w-100">Створити пост</button>
  </form>
</div>

