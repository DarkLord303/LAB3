<%- include('./partials/header.ejs') %>
<%- include('./partials/nav.ejs') %>
<div style="max-width: 520px; margin: 0 auto">
  <h1><%=title%></h1>
  <form method="post" action="/edit-post/<%=post._id%>?_method=POST">
    <div class="mb-3">
      <label for="title" class="form-label">Назва</label>
      <input required type="text" class="form-control" id="title" name="title" value="<%=post.title%>" />
    </div>
    <div class="mb-3">
      <label for="author" class="form-label">Автор</label>
      <input required type="text" class="form-control" id="author" name="author" value="<%=post.author%>" />
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Опис</label>
      <textarea required class="form-control" id="description" name="description"><%=post.description%></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Оновити</button>
  </form>
</div>
<%- include('./partials/footer.ejs') %>
